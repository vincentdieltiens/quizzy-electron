{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "target": "es6",
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "moduleResolution": "node",
        "baseUrl": ".",
         "outDir": "build"
    },

    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "/node_modules",
        "/node_modules*"
    ]
}
